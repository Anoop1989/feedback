    <%= f.label :meeting_happened %><br>
    <%= f.radio_button :meeting_happened, '1' %> Yes
    <%= f.radio_button :meeting_happened, '0' %> No
  </div>
  <div class="field">
    <%= f.label :was_useful %><br>
    <%= f.radio_button :was_useful, '1' %> Yes
    <%= f.radio_button :was_useful, '0' %> No 
  </div>
  <div class="field">
    <%= f.label :potential_revenue %><br>
    <%= f.text_field :potential_revenue %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
